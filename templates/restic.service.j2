[Unit]
Description=Backup {{ item.name }} using restic

[Service]
Type=oneshot
ExecStart={{ restic_script_dir }}/backup-{{ item.name }}.sh > /dev/null
TimeoutStartSec=60
# Decrease priority of the process
Nice=15
# Be less verbose in logs
StandardOutput=null
# 3 hours
TimeoutSec=10800
Environment="CRON=true"
